
<%- include('../partials/header')%>
<%- include("../partials/navbar")%>

<div class="container mt-5">
    <%- include("../partials/flash")%>

    <h6 class="display-6 mb-5" >Cart</h6>
<div class="row">
    <div class="col-lg-8">
    <%for(let item of userCart) {%>
    
        <div class="card mb-3" style="max-width: 400px;">
            <div class="row g-0">
              <div class="col-md-6">
                <img style="width: 180px; height: 140px;" src="<%=item.img%>" alt="...">
              </div>
              <div class="col-md-6">
                <div class="card-body">
                  <h5 class="card-title mb-3"><%=item.name%></h5>
                  <!-- <h6 class="card-title">₹ <%=item.price%></h6> -->
                  <form action="/user/<%=currentUser._id%>/cart/<%=item._id%>?_method=DELETE" method="POST">
                   <button class="btn btn-danger" style= "border-radius: 50%; margin-left: 40px;">X</button>
                  </form>
                
                </div>
              </div>
            </div>
          </div>

    <%}%>
  </div>
    <div class="col-lg-3">
      <%totalAmount=0%>
       <h6 class="display-6 mb-5">My Products</h6>
        <ul class="list-group">
         
            <%for(let item of userCart) {%>
            <li class="list-group-item list-group-item-light"><%=item.name%>-   <span style="display: block; font-weight: 700;" >₹ <%=item.price%></span></li>
            <%totalAmount += item.price%>
            <%}%>
        </ul>
    <div class="mt-4 mb-5">
    <h5> Total Amount = <span style="color: red;">₹</span> <span style="border-top: 0.5px solid black; border-bottom: 0.5px solid black;"><%=totalAmount%></span> </h5> 
    </div> 
   <a href="/cart/payment" class="btn btn-success"> Proceed to pay</a>
  </div>       
</div>
</div>


<%- include('../partials/footer')%>