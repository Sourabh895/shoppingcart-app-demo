                <div class="card-body">
                  <h5 class="card-title"><%=product.name%></h5>
                  <h4 class="card-title">â‚¹ <%=product.price%></h4>
                  <p class="card-text"><%=product.desc.substring(0, 83)%></p>
                  <a href="/products/<%=product._id%>" class="btn btn-outline-primary">More Info</a>
                </div>
              </div>
        </div>
       <%} %>


    </div>
</main>

