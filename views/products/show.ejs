
<%- include('../partials/header')%>
<%- include("../partials/navbar")%>

<link rel="stylesheet" href="/css/star.css">

<div class="container mt-5">
 
  <%- include("../partials/flash")%>

    <div class="row mt-3">
        <div class="col-lg-6">
            <div class="card" style="width: 30rem;">
                <img src="<%=product.img%>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%=product.name%></h5>
                  <h4 class="card-title">â‚¹ <%=product.price%></h4>
                  <p class="card-text"><%=product.desc%></p>
                  <a href="#" class="btn btn-primary">Buy</a>
                  <form action="/user/<%=product._id%>/cart" class="mb-3 mt-3"  method="POST">
                   <button class="btn btn-warning">Add to Cart</button>
                  </form>
                  <a href="/products/<%=product._id%>/edit" class="btn btn-success mb-3">Edit</a>
                  <form action="/products/<%=product._id%>?_method=DELETE" method="POST">
                   <button class="btn btn-danger">Delete</button>
                </form>
                </div>
              </div>
        </div>
        <div class="col-lg-6">
           
            <form class="validated-form" action="/products/<%=product._id%>/review" method="POST" style="width: 70%; margin: 10px auto;" novalidate>
              <h5 class="display-5">Leave a Review</h5>  
              <div class="mb-3">
                     <!-- <label for="rating" class="form-label" >Rating</label>
                     <input type="range" required class="form-range" min="0" max="5" name="rating" id=""> -->
                    
                     <fieldset class="starability-basic">
                      <legend>Rating:</legend>
                      <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                      <input type="radio" id="first-rate1" name="rating" value="1" />
                      <label for="first-rate1" title="Terrible">1 star</label>
                      <input type="radio" id="first-rate2" name="rating" value="2" />
                      <label for="first-rate2" title="Not good">2 stars</label>
                      <input type="radio" id="first-rate3" name="rating" value="3" />
                      <label for="first-rate3" title="Average">3 stars</label>
                      <input type="radio" id="first-rate4" name="rating" value="4" />
                      <label for="first-rate4" title="Very good">4 stars</label>
                      <input type="radio" id="first-rate5" name="rating" value="5" />
                      <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                    
                    </div>


                  <div class="mb-3">
                      <label for="desc" class="form-label">Comment</label>
                      <textarea name="comment"  class="form-control"  id="desc" cols="30" rows="3" required></textarea>
                  </div>
                
                <button type="submit" class="btn btn-success">Submit</button>
              </form>

              <div class="mb-3">
                <%for(let review of product.reviews){%>
                  <div class="card mb-2">
                      <div class="card-body">
                        <p class="starability-result" data-rating="<%=review.rating%>">
                          Rated: <%=review.rating%> stars
                        </p>
                        <p style="color: rgb(104, 223, 104);">By <%=review.user%></p>
                        <p class="card-text"><span style="color: royalblue;">Comment</span> : <%=review.comment%></p>
                      </div>
                    </div>
  
              <%}%>
              </div>
        </div>
    </div>
</div>














